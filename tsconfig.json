{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "lib": [
      "dom",
      "es2015",
      "es5",
      "es6"
    ],
    "outDir": "./staging",
    "baseUrl": ".",
    "paths": {
      "*": [
        "./node_modules/*",
        "./src/*",
      ]
    }
  },
  "include": [
    "./src/events/*",
    "./src/models/*",
    "./src/routes/*",
    "./src/server.ts"
  ],
  "files": [
    "./src/events/*",
    "./src/models*",
    "./src/routes/*",
    "./src/server.ts"
  ],
  "exclude": [
    "./src/interfaces/*",
    "./src/views/admin/*",
    "./src/views/client/*"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}